


    @model IEnumerable<CollegeProject.Models.AgentTaskModel>
@{
    ViewData["Title"] = "AgentRegistrationApprovalRequest";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Agent Approval – Gaubesi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts & icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />

	<link href="~/css/agentregistratiiionapproval.css" rel="stylesheet" />
   
</head>
<body>
    <div class="MainDiv">
        <!-- Navbar (same as Admin History) -->
        <nav class="nav">
            <div class="logo">
                <img src="https://gaaubesi.com/static/assets/images/LOGO.gif" alt="Gaubesi Logo" />
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Admin" asp-action="AdminDashboard">Home</a></li>
                <li><a asp-controller="Admin" asp-action="GetAdminsHistoryList">Past Deliveries</a></li>
                <li><a asp-controller="Admin" asp-action="GetAdminsPresentList">Live Deliveries</a></li>
                <li><a asp-controller="Admin" asp-action="AgentRegistrationApprovalRequest" class="active">Agent Approval</a></li>
                <li><a asp-controller="Admin" asp-action="VendorRegistrationApprovalRequest">Vendor Approval</a></li>
                <li><a asp-controller="Log" asp-action="Logout">Logout</a></li>
            </ul>
        </nav>

        <!-- Content Card -->
        <section class="content-card">
            <h3>Agent Registration Requests</h3>
            <p class="subtitle">Pending agent sign‑ups awaiting approval</p>

            <div class="table-wrapper">
                <table id="table1" class="records-table display nowrap">
                    <thead>
                        <tr>
                            <th style="display:none;">Agent Id</th>
                            <th>S.No.</th>
                            <th>Agent Name</th>
                            <th>Agent Address</th>
                            <th>Agent Email</th>
                            <th>Agent Phone</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </section>
    </div>

    <!-- Scripts (unchanged) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function(){
          // your existing data‑loading logic in agentrequestregistration.js will populate #table1
          GetAgentRequests();
          $("#table1").DataTable({
            scrollX: true,
            paging: false,
            scrollCollapse: true,
            scrollY: '60vh'
          });
        });
    </script>
</body>
</html>

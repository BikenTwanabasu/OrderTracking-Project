@model IEnumerable<CollegeProject.Models.AgentTaskModel>
@using Newtonsoft.Json
@using System.Linq
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Agent Dashboard – Gaubesi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Dashboard CSS -->
    <link href="~/css/agentdashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="MainDiv">
        <!-- Navbar -->
        <nav class="nav">
            <div class="logo">
                <img src="https://gaaubesi.com/static/assets/images/LOGO.gif" alt="Gaubesi Logo" />
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Agent" asp-action="AgentDashboard">Home</a></li>
                <li><a asp-controller="Agent" asp-action="AgentTask">Tasks</a></li>
                <li><a asp-controller="Agent" asp-action="AgentPastRecords">Past Records</a></li>
                <li><a asp-controller="Log" asp-action="Logout">Logout</a></li>
            </ul>
        </nav>

        <!-- Welcome Banner -->
        <div class="agent-welcome">
            <h1>Welcome</h1>
            <h2>@ViewBag.Name</h2>
        </div>

        <!-- Key Metrics -->
        <div class="summary-cards">
            <div class="card" onclick="updateChart('total')">
                <i class="fas fa-tasks"></i>
                <div class="info">
                    <h3>Total Tasks</h3>
                    <p>@(Model?.Count() ?? 0)</p>
                </div>
            </div>
            <div class="card" onclick="updateChart('inProgress')">
                <i class="fas fa-spinner"></i>
                <div class="info">
                    <h3>In Progress</h3>
                    <p>@(Model?.Count(x => x.DeliveryStatus != "Successfully Delivered") ?? 0)</p>
                </div>
            </div>
            <div class="card" onclick="updateChart('completed')">
                <i class="fas fa-check-circle"></i>
                <div class="info">
                    <h3>Completed</h3>
                    <p>@(Model?.Count(x => x.DeliveryStatus == "Successfully Delivered") ?? 0)</p>
                </div>
            </div>
        </div>

        <!-- Recent Tasks Table -->
        <section class="recent-table">
            <h3>Recent Tasks</h3>
            <div class="table-wrapper">
                <table id="recentTasks" class="records-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Vendor</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in (Model ?? Enumerable.Empty<CollegeProject.Models.AgentTaskModel>())
                        .OrderByDescending(x => x.CreatedDate)
                        .Take(5))
                        {
                            <tr>
                                <td>@t.OrderId</td>
                                <td>@t.VendorName</td>
                                <td>@t.CreatedDate</td>
                                <td>@t.DeliveryStatus</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Performance Chart -->
        <section class="performance-chart">
            <h3 id="chartTitle">Weekly Tasks</h3>
            <canvas id="taskChart"></canvas>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-column">
                <h4>About Gaubesi</h4>
                <p>Your trusted delivery partner across Nepal.</p>
            </div>
            <div class="footer-column">
                <h4>Quick Links</h4>
                <ul>
                    <li><a asp-controller="Agent" asp-action="AgentDashboard">Home</a></li>
                    <li><a asp-controller="Agent" asp-action="AgentTask">Tasks</a></li>
                    <li><a asp-controller="Agent" asp-action="AgentPastRecords">Past Records</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h4>Contact</h4>
                <p>Email: support@gaubesi.com</p>
                <p>Phone: +977-9843127642</p>
            </div>
        </footer>
    </div>

    <script>
        // Null-coalescing for ViewBag arrays
        const labels = @(
          ViewBag.ChartLabels != null
            ? Html.Raw(JsonConvert.SerializeObject(ViewBag.ChartLabels))
            : "[]"
        );
        const totalData = @(
          ViewBag.TotalSeries != null
            ? Html.Raw(JsonConvert.SerializeObject(ViewBag.TotalSeries))
            : "[]"
        );
        const inProgressData = @(
          ViewBag.InProgressSeries != null
            ? Html.Raw(JsonConvert.SerializeObject(ViewBag.InProgressSeries))
            : "[]"
        );
        const completedData = @(
          ViewBag.CompletedSeries != null
            ? Html.Raw(JsonConvert.SerializeObject(ViewBag.CompletedSeries))
            : "[]"
        );

        const ctx = document.getElementById('taskChart').getContext('2d');
        let chart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [{
              label: 'Weekly Total Tasks',
              data: totalData,
              borderColor: '#007bff',
              fill: false,
              tension: 0.3
            }]
          },
          options: {
            responsive: true,
            scales: { y: { beginAtZero: true } },
            plugins: { legend: { display: false } }
          }
        });

        function updateChart(metric) {
          let data, title;
          if (metric === 'total') {
            data = totalData;      title = 'Weekly Total Tasks';
          } else if (metric === 'inProgress') {
            data = inProgressData; title = 'Weekly In-Progress Tasks';
          } else {
            data = completedData;  title = 'Weekly Completed Tasks';
          }
          chart.data.datasets[0].data  = data;
          chart.data.datasets[0].label = title;
          document.getElementById('chartTitle').innerText = title;
          chart.update();
        }
    </script>
</body>
</html>

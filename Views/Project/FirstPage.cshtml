@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}
<!DOCTYPE html>
<link rel="stylesheet" href="~/css/FirstPage.css" asp-append-version="true" />
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Gaubesi</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <!-- Custom CSS -->

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">
            <img src="https://gaaubesi.com/static/assets/images/LOGO.gif" alt="Gaubesi Logo" />
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Welcome to <span>Gaubesi Logistics</span></h1>
            <p>Your reliable logistics partner in Nepal. With 1M+ deliveries across 300 locations.</p>
            <!-- Role Selection -->
            <form id="roleForm" class="role-form">
                <div class="radio-group">
                    <label class="radio-item">
                        <input type="radio" name="role" value="Agent" />
                        <i class="fas fa-user-tie"></i>
                        <span>Agent</span>
                    </label>
                    <label class="radio-item">
                        <input type="radio" name="role" value="Vendor" />
                        <i class="fas fa-warehouse"></i>
                        <span>Vendor</span>
                    </label>
                </div>
                <button type="button" class="btn-primary" onclick="redirect()">
                    <i class="fas fa-sign-in-alt"></i> Log In
                </button>
            </form>
        </div>
        <div class="hero-image">
            <img src="https://gaaubesi.com/static/assets/images/logo300.gif" alt="Delivery Illustration" />
        </div>
    </section>

    <script>
        function redirect() {
            const sel = document.querySelector("input[name='role']:checked");
            if (!sel) {
                alert("Please select a role.");
                return;
            }
            switch (sel.value) {
                case 'Vendor': window.location.href = '@Url.Action("VendorLoggingIn", "Log")'; break;
                case 'Agent': window.location.href = '@Url.Action("AgentLoggingIn", "Log")'; break;
                case 'TrackYourOrder': window.location.href = '@Url.Action("CustOrderTracker", "Project")'; break;
            }
        }
    </script>
</body>
</html>
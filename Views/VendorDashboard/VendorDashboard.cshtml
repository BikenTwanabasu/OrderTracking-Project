


@model IEnumerable<CollegeProject.Models.Vendor>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Vendor Dashboard – Gaubesi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Dashboard CSS -->
    <link href="~/css/vendordashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="MainDiv">
        <!-- Navbar -->
        <nav class="nav">
            <div class="logo">
                <img src="https://gaaubesi.com/static/assets/images/LOGO.gif" alt="Logo" />
            </div>
            <ul class="nav-links">
                <li><a asp-controller="VendorDashboard" asp-action="VendorDashboard">Home</a></li>
                <li><a asp-controller="VendorDashboard" asp-action="GetPastVendorListView">Past Records</a></li>
                <li><a asp-controller="VendorDashboard" asp-action="GetCurrentVendorListView">Live Deliveries</a></li>
                <li><a asp-controller="Project" asp-action="OrderCreation">Create Order</a></li>
                <li><a asp-controller="Log" asp-action="Logout">Logout</a></li>
            </ul>
        </nav>

        <!-- Welcome Banner -->
        <div class="vendor-welcome">
            <h1>Welcome</h1>
            <h2>@ViewBag.Name</h2>
        </div>

        <div class="summary-cards">
            <div class="card">
                <i class="fas fa-boxes"></i>
                <div class="info">
                    <h3>Total Orders</h3>
                    <p>@ViewBag.TotalSeries</p>
                </div>
            </div>
            <div class="card">
                <i class="fas fa-truck-loading"></i>
                <div class="info">
                    <h3>Live Deliveries</h3>
                    <p>@ViewBag.LiveSeries</p>
                </div>
            </div>
            <div class="card">
                <i class="fas fa-clipboard-list"></i>
                <div class="info">
                    <h3>Completed Deliveries</h3>
                    <p>@ViewBag.PastSeries</p>
                </div>
            </div>
        </div>
        <section class="performance-chart">
            <h3 id="chartTitle">Delivery Distribution</h3>

            <div class="chart-placeholder">
                <p>
                    Hi Vendor! The delivery distribution chart will appear here once data is
                    available. In the meantime, please review the summary cards above for
                    your order statistics.
                </p>
            </div>

            <!-- If/when you re-enable the pie chart, uncomment this canvas: -->
            <!-- <canvas id="deliveryChart"></canvas> -->
        </section>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-column">
                <h4>About Gaubesi</h4>
                <p>Your trusted delivery partner across Nepal.</p>
            </div>
            <div class="footer-column">
                <h4>Quick Links</h4>
                <ul>
                    <li><a asp-controller="VendorDashboard" asp-action="VendorDashboard">Home</a></li>
                    <li><a asp-controller="VendorDashboard" asp-action="GetPastVendorListView">Past Records</a></li>
                    <li><a asp-controller="VendorDashboard" asp-action="GetCurrentVendorListView">Live Deliveries</a></li>
                    <li><a asp-controller="Project" asp-action="OrderCreation">Create Order</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h4>Contact</h4>
                <p>Email: support@gaubesi.com</p>
                <p>Phone: +977-9843127642</p>
            </div>
        </footer>
    </div>

    <!-- Chart Initialization and Update Logic -->
    <script>
        const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartLabels));
        const totalData     = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.TotalSeries));
        const inTransitData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.InTransitSeries));
        const deliveredData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DeliveredSeries));

        const ctx = document.getElementById('deliveryChart').getContext('2d');
        let chart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [{
              label: 'Total Orders',
              data: totalData,
              borderColor: '#d80000',
              fill: false,
              tension: 0.3
            }]
          },
          options: {
            responsive: true,
            scales: { y: { beginAtZero: true } },
            plugins: { legend: { display: false } }
          }
        });

        function updateChart(metric) {
          let dataset, title;
          if (metric === 'total') {
            dataset = totalData; title = 'Weekly Total Orders';
          } else if (metric === 'inTransit') {
            dataset = inTransitData; title = 'Weekly In-Transit Orders';
          } else {
            dataset = deliveredData; title = 'Weekly Delivered Orders';
          }
          chart.data.datasets[0].data = dataset;
          chart.data.datasets[0].label = title;
          document.getElementById('chartTitle').innerText = title;
          chart.update();
        }
    </script>
</body>
</html>
